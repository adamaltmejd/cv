    \begin{minipage}[b]{0.4\textwidth}
        {\huge\headerfont $author$}\\%[1em]
        {\LARGE\headerfont $title$}
    \end{minipage}%
    \hfill%
    \begin{minipage}[b]{0.3\textwidth}
        \raggedleft\footnotesize\addressblockfont
        \href{$address.online$}{$address.affiliation$}\\
        $address.main$\\
        $address.box$ \\
        $address.city$ \\
        $address.country$
    \end{minipage}%
